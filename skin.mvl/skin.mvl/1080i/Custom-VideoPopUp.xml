<window type="buttonmenu" id="1234">
  <defaultcontrol always="true">9009</defaultcontrol>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>
  <onload condition="!IntegerGreaterThan(Container(9009).NumItems,0)">close</onload>
  <controls>
    <!--<control type="group" description="MENU">
	<include>OpenClose</include>
	<include>DimBG</include>
    </control>-->
    <control type="group" description="MENU">
      <animation type="WindowOpen">
        <effect type="zoom" start="95" end="100" center="960,540" time="200" />
        <effect type="fade" start="80" end="100" time="200" />
      </animation>
      <animation type="WindowClose">
        <effect type="zoom" start="100" end="95" center="960,540" time="100" />
        <effect type="fade" start="100" end="0" time="100" />
      </animation>
      <control type="image" description="Menu BG">
        <posx>699</posx>
        <posy>300</posy>
        <height>400</height>
        <width>600</width>
        <!--<texture border="20,42,20,42">dialogs/ContextMenu.png</texture>-->
        <texture border="0,40,0,40">dialogs/ContextMenu.png</texture>
      </control>
      <control type="panel" id="9009" description="PW Options">
        <posx>699</posx>
        <posy>384</posy>
        <width>600</width>
        <height>400</height>
        <onleft>close</onleft>
        <onright>close</onright>
        <onup>9009</onup>
        <ondown>9009</ondown>
        <scrolltime tween="sine" easing="inout">280</scrolltime>
        <itemlayout height="60" width="600">
           <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>600</width>
            <height>60</height>
            <texture border="3">buttons/ButtonNF.png</texture>
          </control>
          <control type="label">
            <posx>50</posx>
            <posy>0</posy>
            <width>500</width>
            <height>60</height>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </itemlayout>
        <focusedlayout height="60" width="600">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>600</width>
            <height>60</height>
            <texture border="3">buttons/ButtonNF.png</texture>
          </control>
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>600</width>
            <height>60</height>
            <texture>dialogs/ContextFO.png</texture>
          </control>
          <control type="label">
            <posx>50</posx>
            <posy>0</posy>
            <width>500</width>
            <height>60</height>
            <textcolor>Orange</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </focusedlayout>
        <content>
          <item id="11" description="WatchTrailer">
            <visible>true</visible>
            <onclick>dialog.close(all,true)</onclick>
            <onclick></onclick>
            <label>Watch Official Trailer</label>
          </item>
          <item id="12" description="ViewUrl">
            <visible>true</visible>
            <onclick>dialog.close(all,true)</onclick>
            <onclick></onclick>
            <label>View Complete URL</label>
          </item>
          <item id="13" description="HDMessage">
            <visible>true</visible>
            <onclick>dialog.close(all,true)</onclick>
            <onclick></onclick>
            <label>[COLOR FFFF0000]* HD[/COLOR] sources require a minimum of [COLOR FFFF0000]40mb/s[/COLOR] internet speed [COLOR FFFF0000]* Unusable sources[/COLOR] are replaced weekly</label>
          </item>
          <item id="13" description="PlayItem">
            <visible>true</visible>
            <onclick>dialog.close(all,true)</onclick>
            <onclick></onclick>
            <label>Play Item</label>
          </item>
        </content>
      </control>
    </control>
  </controls>
</window>