          <width>660</width>
          <textoffsetx>30</textoffsetx>
          <focusedcolor>FF4F9C45</focusedcolor>
          <textcolor>FF1F6C15</textcolor>
        </control>

        <control type="label" id="20">
            <width>660</width>
            <label>View Complete URL</label>
            <textoffsetx>30</textoffsetx>
